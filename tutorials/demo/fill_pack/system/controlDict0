FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     openInjMoldSim;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.135;

deltaT          1e-6;

writeControl    adjustableRunTime;

writeInterval   0.0135;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   10;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.15;

maxDeltaT       1;

maxAlphaCo      0.15;

maxSolidCo      0.005;

pAuxRlx         0.1;//active when p = pMin

functions {

    probes
    {
        type            probes; //patchProbes;//
        functionObjectLibs ("libsampling.so");
        outputControl   timeStep;
        outputInterval  10;
        probeLocations
        (
         (10e-3 0.05e-3 0.605e-3)
         (37.9e-3 0.05e-3 0.605e-3)
         (66.25e-3 0.05e-3 0.605e-3)
);
        fields
        (
            Tc p rho
        );
    }
}

